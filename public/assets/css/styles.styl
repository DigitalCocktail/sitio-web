/*Estilos globales*/
h1
	margin: 0
.bloque
	margin-top 60px
	padding 0 18px
.btn-success
	padding 0.75em 1.975em
	font-size: 1.4em 
	color #fff
	width 90%
	margin-left auto
	margin-right auto
	margin-bottom 60px
	text-align: center
	a
		color #fff
		&:hover
			text-decoration: none
.barra-horizontal
	.verde
		width 33.3%
		background #99CC33
		height: 5px
	.azul
		width 33.3%
		background #00AFEF
		height: 5px
	.rojo
		width 33.3%
		background #FF0000
		height: 5px
/*Header y  footer*/
header
	.logo-contenedor
		padding 1.125em
		background: #99CC33
		a 
			img
				width: 100%
	nav
		&.menu
			position: fixed
			bottom: 0
			padding 8px
			color #fff
			font-size: 1.5em
			background: #99cc33
			width 100%
			margin-bottom 0px
			.navbar-brand
				color #fff
				font-size: 1.2em
				font-weight: 500
				margin-bottom 0px
				padding-top: 20px
				&:hover
					text-decoration none
					color #fff
			// .naver-container
