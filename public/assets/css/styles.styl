/*Estilos del home*/
section
	article
		&.contenido
			overflow hidden
		.destacado
			padding 30px 18px
			background: url(../images/bg-destacado.jpg) no-repeat
			background-size cover
			h1
				font-size: 1.5em
				line-height: 1.6em
				color #fff
		
		.investigacion
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
			#imgInvestigacion
			#textInvestigacion
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
		.planeacion
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
			#imgPlaneacion
			#textPlaneacion
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
		.ejecucion
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
			#imgEjecucion
			#textEjecucion
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
		.acompanamiento
			#imgAcompanamiento
			#textAcompanamiento
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
	div
		&.btn-preparamos
			margin-bottom: 60px
			clear both
		a
			&.btn-accion
				color #fff
				width 90%
				margin-left auto
				margin-right auto
				margin-bottom 60px
				background: #ff0000 url(../images/check.png) no-repeat left center
				background-size contain
				padding 0.75em 1.975em 0.75em 25%
				display block
				&:hover
					text-decoration none
			span
				color #fff
				&.accion 
					font-size 1.2em
					display block
					margin-bottom .3em
				&.texto-accion
					font-size: 0.6em
					display block
					color #ffd3d3
			
				
