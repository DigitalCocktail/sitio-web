			.navbar-nav
				li
					a
						&:hover
						&:focus
							color #fff
					&.active
						a
							&:hover
								color #fff
								background-color: #89b62f;
			.navbar-toggle
				border none
				&:hover
				&:focus
					background: none
				.icon-bar
					background: #fff
					width: 44px;
					height: 7px;
			.navbar-collapse
				border 0px
				ul 
					li 
						a
							color #fff
						&.active
							a
								color: #fff;
								background-color: #89b62f;


footer
	background: #d9d9d9
	padding 30px 18px
	margin-bottom 30px
	.correo
		margin-bottom 30px
	.redes-sociales
		margin-bottom: 30px
		ul 
			margin 0
			padding 0
			li 
				list-style: none
				display inline-block
				a
					width 54px
					height 54px
					display block
					text-indent: -9999px
					margin 18px 24px 0px 24px
					&.fb-icon
						background:  url(../images/sprite.png) no-repeat 
						background-position -54px 0px
					&.tw-icon
						background:  url(../images/sprite.png) no-repeat 
						background-position: -54px -54px
					&.gp-icon
						background:  url(../images/sprite.png) no-repeat 
						background-position: -54px -108px


/*Estilos del home*/
section
	article
		.destacado
			padding 30px 18px
			background: url(../images/bg-destacado.jpg) no-repeat
			background-size cover
			h1
				font-size: 1.5em
				line-height: 1.6em
				color #fff
		
		.investigacion
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
			#imgInvestigacion
			#textInvestigacion
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
		.planeacion
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
			#imgPlaneacion
			#textPlaneacion
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
		.ejecucion
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
			#imgEjecucion
			#textEjecucion
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
		.acompanamiento
			#imgAcompanamiento
			#textAcompanamiento
				-webkit-animation-delay: 0.3s;
				-moz-animation-delay: 0.3s;
				-ms-animation-delay: 0.3s;
				-o-animation-delay: 0.3s;
			h2
				text-transform: uppercase
				color: #00AFEF
				margin-bottom 30px
			figure
				margin-bottom: 30px
	div
		a
			&.btn-accion
				color #fff
				width 90%
				margin-left auto
				margin-right auto
				margin-bottom 60px
				background: #ff0000 url(../images/check.png) no-repeat left center
				background-size contain
				padding 0.75em 1.975em 0.75em 25%
				display block
			span
				color #fff
				&.accion 
					font-size 1.4em
					display block
					margin-bottom .3em
				&.texto-accion
					font-size: 0.75em
					display block
					color #ff9a9a
			&:hover
				text-decoration none
				background: #cb0000 url(../images/check.png) no-repeat left center
				background-size contain

