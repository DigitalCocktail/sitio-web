				margin-bottom: 30px
	div
		a
			&.btn-accion
				color #fff
				width 90%
				margin-left auto
				margin-right auto
				margin-bottom 60px
				background: #ff0000 url(../images/check.png) no-repeat left center
				background-size contain
				padding 0.75em 1.975em 0.75em 25%
				display block
			span
				color #fff
				&.accion 
					font-size 1.4em
					display block
					margin-bottom .3em
				&.texto-accion
					font-size: 0.75em
					display block
					color #ff9a9a
			&:hover
				text-decoration none
				background: #cb0000 url(../images/check.png) no-repeat left center
				background-size contain

