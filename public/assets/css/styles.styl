			// 				color #fff
			// 				font-size: 1.3
			// 				font-weight normal
			// 				display block
			// 				padding 18px 0px
			.navbar-nav
				li
					a
						&:hover
						&:focus
							color #fff
					&.active
						a
							&:hover
								color #fff
