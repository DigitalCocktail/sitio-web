/*Estilos globales*/
h1
	margin: 0
.bloque
	margin-top 60px
	padding 0 18px
.bloque-interno
	margin-top 30px
	padding 0 18px
.btn-success
	padding 0.75em 1.975em
	font-size: 1.4em 
	color #fff
	width 90%
	margin-left auto
	margin-right auto
	margin-bottom 60px
	text-align: center
	display block
	border none
	a
		color #fff
		&:hover
			text-decoration: none
.barra-horizontal
	.verde
		width 33.3%
		background #99CC33
		height: 5px
	.azul
		width 33.3%
		background #00AFEF
		height: 5px
	.rojo
		width 33.3%
		background #FF0000
		height: 5px
a
	color #00afef
	&:hover
		color #00afef
		text-decoration underline

/*Formularios*/
form 
	h3
		text-align: left
		font-weight 700
		padding 0
		margin-bottom 12px
	label
		width 100%
		padding 18px
		color #fff
		background: #99cc33
		display block
		text-align: left
		font-weight normal
		margin 0
		&.check-box
			background none
			display inline-block
			width auto
			padding 0
			color #4d4d4d
			input
				width auto
				margin: 5px 13px 5px 5px;
				display: block;
				float: left;
	input
		width 100%
		padding 15px
		text-align: left
		margin-bottom: 24px
	p 
		text-align left
		margin-top 12px


/*Header y  footer*/
header
	.logo-contenedor
		padding 1.125em
		background: #99CC33
		a 
			img
				width: 100%
	nav
		&.menu
			position: fixed
			bottom: 0
			padding 0px
			color #fff
			font-size: 1.5em
			background: #99cc33
			width 100%
			margin-bottom 0px
			z-index 10
			.navbar-brand
				color #fff
				font-size: 1.2em
				font-weight: 500
				margin-bottom 0px
				padding-top: 20px
				font-weight 500
				&:hover
					text-decoration none
					color #fff
			// .naver-container
			// 	ul
