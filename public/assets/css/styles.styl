/*Estilos globales*/
h1
	margin: 0
.bloque
	margin-top 60px
	padding 0 18px
.bloque-interno
	margin-top 30px
	padding 0 18px
.btn-success
	padding 0.75em 1.975em
	font-size: 1.4em 
	color #fff
	width 90%
	margin-left auto
	margin-right auto
	// margin-bottom 60px
	text-align: center
	display block
	border none
	&:hover
		text-decoration none
	a
		color #fff
		&:hover
			text-decoration: none
.barra-horizontal
	.verde
		width 33.3%
		background #99CC33
		height: 5px
	.azul
		width 33.3%
		background #00AFEF
		height: 5px
	.rojo
		width 33.3%
		background #FF0000
		height: 5px
.container 
	padding 0
a
	color #00afef
	&:hover
		color #00afef
		text-decoration underline

/*Formularios*/
form 
	background: #f0f0f0
	padding 18px
	h3
		text-align: left
		font-weight 700
		padding 0
		margin-bottom 12px
	label
		width 100%
		padding 18px
		color #fff
		background: #99cc33
		display block
		text-align: left
		font-weight normal
		margin 0
		&.check-box
			background none
			display inline-block
			width auto
			padding 0
			color #4d4d4d
			input
				width auto
				margin: 5px 13px 5px 5px;
				display: block;
				float: left;
	input
		width 100%
		padding 15px
		text-align: left
		margin-bottom: 24px
	p 
		text-align left
		margin-top 12px
		a 
			&:hover
				text-decoration underline
	select
		width 100%
		padding 15px
		text-align: left
		margin-bottom: 24px
		background:  #fff url(../images/bg-select.jpg) no-repeat top right
		background-size contain
		appearance: none;
		-webkit-appearance: none;
		-moz-appearance: none;
		option
			padding 5px
	textarea
		width 100%
		padding 15px
		margin-bottom 24px
	.listas-correo
		padding-left 30px
		margin-top 10px
		.listas 
			display block
			margin-bottom 10px
			color #a4a4a4
	#frmTrabaja
		display none

