		padding 1.125em
		background: #99CC33
		a 
			img
				width: 100%
	nav
		&.menu
			position: fixed
			bottom: 0
			padding 0px
			color #fff
			font-size: 1.5em
			background: #99cc33
			width 100%
			margin-bottom 0px
			z-index 10
			.navbar-brand
				color #fff
				font-size: 1.2em
				font-weight: 500
				margin-bottom 0px
				padding-top: 20px
				font-weight 500
				&:hover
					text-decoration none
					color #fff
			// .naver-container
			// 	ul
